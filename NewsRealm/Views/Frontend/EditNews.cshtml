@model NewsRealm.Models.NewsModel
@{
    ViewData["Title"] = "NewsFlow | Редактировать новость";
    Layout = null;
    var hasNews = Model != null && Model.Id > 0;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Roboto+Slab:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        .search-section {
            background: white;
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 40px;
        }
        
        .search-section h3 {
            font-size: 1.4rem;
            color: #1a237e;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .search-form {
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 20px;
            align-items: end;
            margin-bottom: 30px;
        }
        
        @media (max-width: 768px) {
            .search-form {
                grid-template-columns: 1fr;
            }
        }
        
        .search-results {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 25px;
            border: 2px dashed #ddd;
        }
        
        .search-results h4 {
            font-size: 1.1rem;
            color: #1a237e;
            margin-bottom: 15px;
        }
        
        .found-news {
            background: white;
            border-radius: 8px;
            padding: 20px;
            border-left: 4px solid #4fc3f7;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }
        
        .found-news-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .found-source {
            background: #e8f4fc;
            color: #1a237e;
            padding: 4px 12px;
            border-radius: 4px;
            font-weight: 500;
        }
        
        .found-id {
            background: #f0f0f0;
            color: #555;
            padding: 4px 12px;
            border-radius: 4px;
            font-family: monospace;
        }
        
        .found-news h4 {
            font-size: 1.2rem;
            color: #1a237e;
            margin-bottom: 10px;
        }
        
        .found-news-footer {
            display: flex;
            justify-content: space-between;
            color: #777;
            font-size: 0.9rem;
            border-top: 1px solid #eee;
            padding-top: 15px;
            margin-top: 15px;
        }
        
        .text-danger {
            color: #d32f2f;
            font-size: 0.9rem;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <!-- Шапка -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <a asp-controller="Frontend" asp-action="Index" class="logo">
                    <i class="fas fa-newspaper"></i>
                    <div>
                        <h1>NewsFlow</h1>
                        <span class="tagline">Редактировать новость</span>
                    </div>
                </a>
                
                <div class="header-actions">
                    <a asp-controller="Frontend" asp-action="Index" class="btn-action">
                        <i class="fas fa-arrow-left"></i> На главную
                    </a>
                    <a asp-controller="Frontend" asp-action="AddNews" class="btn-action">
                        <i class="fas fa-plus"></i> Добавить
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Основной контент -->
    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h2><i class="fas fa-edit"></i> Редактировать новость</h2>
                <p class="page-subtitle">Введите ID новости для загрузки и редактирования</p>
            </div>
            
            @if (!hasNews)
            {
                <!-- Шаг 1: Поиск новости по ID -->
                <div class="search-section">
                    <h3><i class="fas fa-search"></i> Найти новость для редактирования</h3>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="text-danger" style="background: #ffebee; padding: 15px; border-radius: 8px; margin-bottom: 20px; border-left: 4px solid #d32f2f;">
                            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                        </div>
                    }
                    <form asp-controller="Frontend" asp-action="EditNews" method="get" class="search-form">
                        <div class="form-group">
                            <label for="id">ID новости *</label>
                            <input type="number" id="id" name="id" placeholder="Введите числовой ID новости" required>
                            <div class="form-hint">ID можно получить из списка новостей на главной странице</div>
                        </div>
                        
                        <button type="submit" class="btn-submit">
                            <i class="fas fa-search"></i> Найти новость
                        </button>
                    </form>
                </div>
            }
            else
            {
                <!-- Шаг 2: Форма редактирования -->
                <div class="form-container">
                    <h3><i class="fas fa-edit"></i> Редактирование новости</h3>
                    <form asp-controller="Frontend" asp-action="EditNews" method="post" id="editNewsForm">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <!-- Source (Источник) -->
                        <div class="form-group">
                            <label asp-for="Source">Источник *</label>
                            <input type="text" asp-for="Source" required>
                            <span asp-validation-for="Source" class="text-danger"></span>
                        </div>
                        
                        <!-- Title (Заголовок) -->
                        <div class="form-group">
                            <label asp-for="Title">Заголовок новости *</label>
                            <input type="text" asp-for="Title" required>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        
                        <!-- Description (Краткое описание) -->
                        <div class="form-group">
                            <label asp-for="Description">Краткое описание *</label>
                            <textarea asp-for="Description" rows="3" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <!-- MainText (Основной текст) -->
                        <div class="form-group">
                            <label asp-for="MainText">Основной текст новости *</label>
                            <textarea asp-for="MainText" rows="10" required></textarea>
                            <span asp-validation-for="MainText" class="text-danger"></span>
                        </div>
                        
                        <!-- ImageUrl (Ссылка на изображение) -->
                        <div class="form-group">
                            <label asp-for="ImageUrl">Ссылка на изображение</label>
                            <input type="url" asp-for="ImageUrl">
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        
                        <!-- Authors (Авторы) -->
                        <div class="form-group">
                            <label asp-for="Authors">Авторы</label>
                            <input type="text" asp-for="Authors">
                            <span asp-validation-for="Authors" class="text-danger"></span>
                        </div>
                        
                        <!-- Category (Категория) -->
                        <div class="form-group">
                            <label asp-for="Category">Категория</label>
                            <select asp-for="Category">
                                <option value="">Выберите категорию</option>
                                <option value="Политика">Политика</option>
                                <option value="Экономика">Экономика</option>
                                <option value="Технологии">Технологии</option>
                                <option value="Спорт">Спорт</option>
                                <option value="Наука">Наука</option>
                                <option value="Культура">Культура</option>
                                <option value="Здоровье">Здоровье</option>
                                <option value="Общество">Общество</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        
                        <!-- Language (Язык) -->
                        <div class="form-group">
                            <label asp-for="Language">Язык *</label>
                            <select asp-for="Language" required>
                                <option value="">Выберите язык</option>
                                <option value="Русский">Русский</option>
                                <option value="English">English</option>
                                <option value="Español">Español</option>
                                <option value="Deutsch">Deutsch</option>
                                <option value="Français">Français</option>
                                <option value="中文">中文</option>
                            </select>
                            <span asp-validation-for="Language" class="text-danger"></span>
                        </div>
                        
                        <div class="form-actions">
                            <a asp-controller="Frontend" asp-action="EditNews" class="btn-cancel">
                                <i class="fas fa-times"></i> Отменить
                            </a>
                            <button type="submit" class="btn-submit">
                                <i class="fas fa-save"></i> Сохранить изменения
                            </button>
                            <form asp-controller="Frontend" asp-action="DeleteNews" asp-route-id="@Model.Id" method="post" style="display: inline;" onsubmit="return confirm('Вы уверены, что хотите удалить эту новость? Это действие нельзя отменить.');">
                                <button type="submit" class="btn-delete">
                                    <i class="fas fa-trash"></i> Удалить новость
                                </button>
                            </form>
                        </div>
                    </form>
                </div>
            }
        </div>
    </main>

    <!-- Подвал -->
    <footer class="footer">
        <div class="container">
            <div class="footer-bottom">
                <p>&copy; 2025 NewsFlow. Форма редактирования новости.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

